{
  "routes": [
    {
      "route": "/.auth/login/twitter",
      "statusCode": 401
    },
    {
      "route": "/.auth/login/facebook",
      "statusCode": 401
    },
    {
      "route": "/.auth/login/google",
      "statusCode": 401
    },
    {
      "route": "/.auth/login/github",
      "statusCode": 401
    },
    {
      "route": "/.auth/login/apple",
      "statusCode": 401
    },
    {
      "route": "/.auth/login/aad",
      "statusCode": 401
    },
    {
      "route": "/api/GetRoles",
      "methods": [
        "POST"
      ],
      "allowedRoles": [
        "anonymous",
        "authenticated"
      ]
    },
    {
      "route": "/cards*",
      "methods": [
        "GET"
      ],
      "allowedRoles": [
        "authenticated"
      ]
    }
  ],
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/b2c?post_login_redirect_uri=.referrer"
    }
  },
  "platform": {
    "apiRuntime": "dotnet:6.0"
  },
  "auth": {
    "rolesSource": "/api/GetRoles",
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "b2c": {
          "registration": {
            "clientIdSettingName": "B2C_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "B2C_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://ourgameauth.b2clogin.com/ourgameauth.onmicrosoft.com/B2C_1_SUSI/v2.0/.well-known/openid-configuration"
            }
          },
          "login": {
            "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
            "scopes": [
              "offline_access",
              "openid",
              "https://ourgameauth.onmicrosoft.com/sg-api/app.read",
              "https://ourgameauth.onmicrosoft.com/sg-api/app.write"
            ]
          }
        }
      }
    }
  },
  "navigationFallback": {
    "rewrite": "index.html",
    "exclude": [
      "/images/*.{png,jpg,gif}",
      "/css/*"
    ]
  },
  "mimeTypes": {
    ".json": "text/json"
  }
}